<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:id="@+id/relative">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/secuurelogo"
        android:layout_above="@+id/username" />

    <TextView
        android:id="@+id/username"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etUsername"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/username" />

    <TextView
        android:id="@+id/password"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/bLogin" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_marginBottom="28dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bLogin"
        android:layout_alignStart="@+id/password" />

    <Button
        android:id="@+id/bLogin"
        android:text="Log in"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/bSignUp"
        android:layout_alignBottom="@+id/bSignUp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bSignUp"
        android:text="Sign up"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

</RelativeLayout>