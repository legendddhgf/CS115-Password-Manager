<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="1"
    android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed">

    <TextView
        android:text="Successful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewSuccess"
        android:textSize="16sp"
        android:layout_weight="0.03"
        android:textColor="@color/common_plus_signin_btn_text_light_pressed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Please verify your e-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSucMessage"
        android:textSize="16sp"
        android:layout_weight="0.03"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/viewSuccess"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Back to log in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBackLogin"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_below="@+id/textSucMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>