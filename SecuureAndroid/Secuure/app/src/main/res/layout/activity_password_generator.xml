<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:backgroundTint="#ffffff">


    <RadioButton
        android:text="Numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/radioNum"
        android:layout_below="@+id/radioCap"
        android:layout_alignStart="@+id/radioCap" />

    <RadioButton
        android:text="Symbols ('!','#','@','$','%','^','*')"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/radioSym"
        android:layout_below="@+id/radioNum"
        android:layout_alignStart="@+id/radioNum" />

    <TextView
        android:text="Generated Password Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageButtonRefresh"
        android:layout_alignStart="@+id/radioSym"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCancel"
        android:textSize="16sp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/buttonOk"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="76dp" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOk"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:layout_alignBaseline="@+id/buttonCancel"
        android:layout_alignBottom="@+id/buttonCancel"
        android:layout_alignEnd="@+id/imageButtonRefresh"
        android:layout_marginEnd="31dp" />

    <RadioButton
        android:text=" Capitol Letters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioCap"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/viewPasswordGen"
        android:layout_alignEnd="@+id/buttonCancel"
        android:layout_marginEnd="24dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/stat_notify_sync"
        android:id="@+id/imageButtonRefresh"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/radioSym"
        android:layout_toEndOf="@+id/viewPasswordGen" />

    <TextView
        android:text="Password Generator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewPasswordGen"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>